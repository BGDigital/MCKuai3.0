<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mckuai.imc" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MCkuai"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GamePackageActivity"
            android:label="@string/title_activity_game_package" >
        </activity>
        <activity
            android:name=".Map_detailsActivity"
            android:label="@string/delete_map" >
        </activity>
        <activity
            android:name=".MymapActivity"
            android:label="@string/mymap" >
        </activity>
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking" >
        </activity>
        <activity
            android:name=".Export_mapActivity"
            android:label="@string/title_activity_export_map" >
        </activity>
        <activity
            android:name=".MapleaveActivity"
            android:label="@string/title_activity_mapleave" >
        </activity>
        <activity
            android:name=".ServerDetailsActivity"
            android:label="@string/title_activity_server_details" >
        </activity>
        <activity
            android:name=".MapdeleteActivity"
            android:label="@string/title_activity_mapdetele" >
        </activity>
        <activity
            android:name=".MapimportActivity"
            android:label="@string/title_activity_mapimport" >
        </activity>
        <activity
            android:name=".MapexportActivity"
            android:label="@string/title_activity_mapexport" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="登录"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>
