<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <solid android:color="@color/background_forum_selected" />

            <corners android:radius="@dimen/forumview_cover_radius" />

            <size android:height="@dimen/forumview_height" android:width="@dimen/forumview_height" />
        </shape></item>
    <item android:state_checked="false"><shape>
            <solid android:color="@color/background_green" />

            <corners android:radius="@dimen/forumview_cover_radius" />

            <size android:height="@dimen/forumview_height" android:width="@dimen/forumview_height" />
        </shape></item>

</selector>