<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@drawable/frame_top_and_bottom_white"
    android:paddingBottom="@dimen/item_padTB"
    android:paddingLeft="@dimen/item_padleft"
    android:paddingRight="20dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="@dimen/item_padTB">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/fm_w"
        android:layout_height="@dimen/fm_h"
        android:layout_centerVertical="true"
        android:background="@drawable/map_default" />

    <LinearLayout
        android:id="@+id/rl_btn_ok"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
    <Button
        android:id="@+id/rbtn_ok"
        android:layout_width="@dimen/xz_wh"
        android:layout_height="@dimen/xz_wh"
        android:focusable="false"
        android:background="@drawable/btn_map_start"
        android:button="@null" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/rbtn_ok"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/rbtn_ok"
        android:gravity="center_horizontal"
        android:text="seze"
        android:textColor="@color/secondary"
        android:textSize="@dimen/font_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/rl_btn_ok"
        android:layout_toRightOf="@id/image"
        android:lines="1"
        android:text="地图名字"
        android:textSize="@dimen/font_big" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:layout_toLeftOf="@id/rl_btn_ok"
        android:text="更新时间："
        android:textColor="@color/secondary"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image"
        android:layout_toLeftOf="@id/rl_btn_ok"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="类别"
        android:textColor="@color/green"
        android:textSize="@dimen/font_small" />



</RelativeLayout>