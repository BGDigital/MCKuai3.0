<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_green"
    android:layout_width="match_parent" android:layout_height="49dp"
    android:padding="10dp">


    <ImageButton
        android:id="@+id/btn_titlebar_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_circle_green_shape"/>

    <ImageButton
        android:id="@+id/btn_titlebar_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_titlebar_share"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        />

     <TextView
         android:id="@+id/tv_titlebar_title"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:gravity="center"
         android:text="标题"
         android:textColor="@color/font_white"
         android:textSize="@dimen/font_title"
         android:layout_toLeftOf="@id/btn_titlebar_share"
         android:layout_toRightOf="@id/btn_titlebar_left"
         android:layout_centerVertical="true"
         />

    <Spinner
        android:id="@+id/sp_titlebar_type"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_alignBottom="@id/tv_titlebar_title"
        android:layout_alignTop="@id/tv_titlebar_title"
        android:background="@drawable/btn_dropdown"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        >

    </Spinner>

</RelativeLayout>