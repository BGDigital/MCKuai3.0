<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_comm" />

    <LinearLayout
        android:id="@+id/maproot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/frame_darkgray"
        android:orientation="horizontal"
        android:padding="@dimen/item_divider_height">

        <Button
            android:id="@+id/go_map"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_h"
            android:layout_weight="1"
            android:background="@drawable/btn_map_ranking"
            android:checked="true"
            android:drawableLeft="@drawable/mymap_go"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="12dp"
            android:text="@string/go_map"
            android:textColor="@color/font_white" />

        <Button
            android:id="@+id/leave_map"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_h"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_map_classification"
            android:checked="true"
            android:drawableLeft="@drawable/mymap_leave"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="12dp"
            android:text="@string/leave_map"
            android:textColor="@color/font_white" />

        <Button
            android:id="@+id/delete_map"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_h"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_map_detele"
            android:checked="true"
            android:drawableLeft="@drawable/mymap_delete"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="12dp"
            android:text="@string/delete_map"
            android:textColor="@color/font_white" />
    </LinearLayout>

    <EditText
        android:id="@+id/map_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="搜索"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:visibility="gone" />

    <ListView
        android:id="@+id/map_mymap_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/frame_darkgray"
        android:dividerHeight="@dimen/item_height_interval"></ListView>

    <RelativeLayout
        android:id="@+id/mymapl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/font_red"
            android:text="@string/delete"
            android:textColor="@color/font_white" />

        <ListView
            android:id="@+id/map_delete_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/delete"></ListView>
    </RelativeLayout>
</LinearLayout>