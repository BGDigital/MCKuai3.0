<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/background_green">
    <ImageView
        android:id="@+id/btn_left"
        android:layout_width="@dimen/button_left_width"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="@dimen/com_margin"
        android:paddingRight="@dimen/padding_right_button_left"
        android:scaleType="center"
        android:background="@mipmap/ic_launcher"
        />
    <ImageButton
        android:id="@+id/btn_right"
        android:layout_width="@dimen/button_left_width"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher"
        android:paddingLeft="@dimen/padding_right_button_left"
        android:paddingRight="@dimen/com_margin"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_button_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_dimen_title" />
</RelativeLayout>