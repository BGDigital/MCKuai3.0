<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_usercenter_height"
    android:background="@drawable/background_top_bottom_frame"
    android:paddingLeft="@dimen/com_margin"
    android:paddingRight="@dimen/com_margin" >

    <ImageView
        android:id="@+id/iv_reply"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginBottom="@dimen/com_margin"
        android:layout_marginRight="@dimen/com_margin"
        android:layout_marginTop="@dimen/com_margin"
        android:background="@drawable/btn_makechat"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_replyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_reply"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_reply"
        android:gravity="center_vertical"
        android:text="5分钟前"
        android:textColor="@color/font_secondary"
        android:textSize="@dimen/font_dimen_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/iv_reply"
        android:layout_alignTop="@id/iv_reply"
        android:layout_marginRight="@dimen/com_margin"
        android:layout_toRightOf="@id/iv_reply"
        android:gravity="center_vertical"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:text="@string/replyPost"
        android:textColor="@color/font_secondary"
        android:textSize="@dimen/font_dimen_small" />

    <TextView
        android:id="@+id/tv_postTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_reply"
        android:singleLine="true"
        android:text="帖子标题帖子标题帖子标题帖子标题帖子标题帖子标题帖子标题帖子标题"
        android:textColor="@color/font_secondary"
        android:textSize="@dimen/font_dimen_small" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/com_margin"
        android:layout_marginTop="@dimen/com_margin"
        android:singleLine="true"
        android:text="回复内容回复内容回复内容回复内容回复内容回复内容回复内容"
        android:textColor="@color/font_primary"
        android:textSize="@dimen/font_dimen_primary" />

</RelativeLayout>