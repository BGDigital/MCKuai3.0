<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp">
    <ImageView
        android:id="@+id/iv_serverCover"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/iv_showDetails"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_serverVersion"
        android:layout_alignLeft="@id/iv_serverCover"
        android:layout_alignTop="@id/iv_serverCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_orange"
        android:textColor="@color/font_white"
        android:padding="5dp"
        android:text="2222"
        />

    <TextView
        android:id="@+id/tv_serverName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/font_primary"
        android:layout_alignTop="@id/iv_serverCover"
        android:layout_toRightOf="@id/iv_serverCover"
        android:layout_toLeftOf="@id/iv_showDetails"
        android:text="服务器"
        />

    <TextView
        android:id="@+id/tv_serverState"
        android:layout_alignBottom="@+id/iv_serverCover"
        android:layout_alignLeft="@+id/tv_serverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_white"
        android:background="@color/background_green"
        android:text="在线"
        />
    <TextView
        android:id="@+id/tv_serverPlayerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_secondary"
        android:text="人数:12/222"
        android:singleLine="true"
        android:layout_alignBottom="@id/tv_serverState"
        android:layout_toRightOf="@id/tv_serverState"
        />

    <TextView
        android:id="@+id/tv_serverType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:text="生存"
        android:layout_above="@id/tv_serverState"
        android:layout_below="@id/tv_serverName"
        android:layout_alignLeft="@id/tv_serverName"
        android:singleLine="true"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_serverOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_secondary"
        android:text="服主：用户名"
        android:layout_alignTop="@id/tv_serverType"
        android:layout_alignBottom="@id/tv_serverType"
        android:layout_toRightOf="@id/tv_serverType"
        android:singleLine="true"
        android:gravity="center_vertical"
        />
</RelativeLayout>