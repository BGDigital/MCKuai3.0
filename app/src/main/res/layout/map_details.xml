<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tit"
        layout="@layout/map_title_details" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/md_r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_height"
        android:layout_below="@id/tit"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/fm_w"
            android:layout_height="@dimen/fm_h"
            android:background="@drawable/map_default"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image"
            android:lines="1"
            android:text="地图名字"
            android:textColor="@color/font_primary"
            android:textSize="@dimen/font_dimen_title" />

        <TextView
            android:id="@+id/tv_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image"
            android:text="作者名"
            android:textColor="@color/secondary"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_nm"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image"
            android:gravity="center_vertical"
            android:text="类别"
            android:textColor="@color/secondary"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tx_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_nm"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_category"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="时间"
            android:textColor="@color/secondary"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>

    <com.mckuai.widget.ProgressButton
        android:id="@+id/dl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_ht_h"
        android:layout_alignParentBottom="true"
        android:background="@color/background_green"
        android:text="下载"
        android:textColor="@color/font_white" />

    <RelativeLayout
        android:id="@+id/md_r2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dl"
        android:layout_below="@+id/md_r1"
        android:layout_marginTop="@dimen/details_divider"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ScrollView
            android:id="@+id/sv_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/sv_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/frame_darkgray"
                    android:fillViewport="true"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:id="@+id/sv_lh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="介绍"
                    android:textColor="@color/background_green"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>