<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mymapr1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/frame_top_and_bottom_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingBottom="@dimen/item_padTB"
        android:paddingLeft="@dimen/item_padleft"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/item_padTB">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/fm_w"
            android:layout_height="@dimen/fm_h"
            android:background="@drawable/map_default" />

        <com.mckuai.widget.fabbutton.FabButton
            android:id="@+id/download_map"
            android:layout_width="@dimen/xz_wh"
            android:layout_height="@dimen/xz_wh"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:clickable="true"
            android:color="@color/white"
            android:indeterminate="false"
            android:max="100"
            android:src="@drawable/download"
            app:fbb_autoStart="true"
            app:fbb_endBitmap="@drawable/btn_map_start"
            app:fbb_hideProgressOnComplete="true"
            app:fbb_progressColor="#34d152"
            app:fbb_progressWidthRatio="0.1"
            app:fbb_showEndBitmap="true"
            app:fbb_showShadow="true" />

        <ImageButton
            android:id="@+id/map_download_image"
            android:layout_width="@dimen/xz_wh"
            android:layout_height="@dimen/xz_wh"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_map_start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/download_map"
            android:layout_toRightOf="@id/image"
            android:lines="1"
            android:text="地图名字"
            android:textColor="@color/font_primary"
            android:textSize="@dimen/font_big" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image"
            android:text="更新时间："
            android:textColor="@color/secondary"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_time"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image"
            android:gravity="center_vertical"
            android:text="类别"
            android:textColor="@color/green"
            android:textSize="@dimen/font_small" />


        <TextView
            android:id="@+id/tv_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"
            android:layout_alignLeft="@id/download_map"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/download_map"
            android:gravity="center_horizontal"
            android:text="seze"
            android:textColor="@color/secondary"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>

