<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mymapr1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingBottom="@dimen/item_padTB"
        android:paddingLeft="@dimen/item_padleft"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/item_padTB">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/fm_w"
            android:layout_height="@dimen/fm_h"
            android:background="@drawable/map_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/MasterLayout01"
            android:layout_toRightOf="@id/image"
            android:lines="1"
            android:text="地图名字"
            android:textSize="@dimen/font_big" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image"
            android:text="更新时间："
            android:textColor="@color/secondary"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_time"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image"
            android:gravity="center_vertical"
            android:text="类别"
            android:textColor="@color/font_radio_hint_checked"
            android:textSize="@dimen/font_small" />

        <com.mckuai.widget.MasterLayout
            android:id="@+id/MasterLayout01"
            android:layout_width="@dimen/xz_wh"
            android:layout_height="@dimen/xz_wh"
            android:layout_alignParentRight="true"
            android:clickable="true"></com.mckuai.widget.MasterLayout>

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"
            android:layout_alignLeft="@id/MasterLayout01"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/MasterLayout01"
            android:gravity="center_horizontal"
            android:text="seze"
            android:textColor="@color/secondary"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rk_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/map_one"
        android:gravity="top|center|left"
        android:text="1"
        android:textColor="@color/font_white" />
</RelativeLayout>